{{>layout/header}}
<h1>Share Your Trip & Hear the experiences of others</h1>
<div class="col-md-12">
  <div class="row">
    <div class="col-md-6">
      <a href="/posts/save" role="button" class="btn btn-primary">New Post</a>
      <a href="/posts/list" role="button" class="btn btn-warning">Posts List</a>
    </div>
  </div>
  <br>
  <!-- 목록 출력 영역 -->
  <table class="table table-horizontal table-bordered">
    <thead class="thead-strong">
    <tr>
      <th>글 번호</th>
      <th>글 제목</th>
      <th>작성자</th>
      <th>최종 수정일</th>
    </tr>
    </thead>
    <tbody id="tbody">
    {{#posts}}
      <tr>
        <td>{{postId}}</td>
        <td><a href="/posts/update/{{postId}}">{{title}}</a></td>
        <td>{{author}}</td>
        <td>{{modifiedDate}}</td>
      </tr>
    {{/posts}}
    </tbody>
  </table>
</div>
{{>layout/footer}}