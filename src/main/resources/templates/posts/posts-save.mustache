{{>layout/header}}
{{>layout/carousel}}
<link rel="stylesheet" href="/css/editor/ckeditor.css" type="text/css">

<div class="container marketing">
    <h1>Post About Your Trip</h1>
    <form>
      <div class="row">
        <div class="form-gorup col-lg-8">
          <label for="title">제목</label>
          <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요"/>
        </div>
        <div class="form-gorup col-lg-4" style="text-align: left">
          <label for="author">작성자</label>
          {{#user}}
            <input type="hidden" class="form-control" id="authorId" value="{{userNum}}"/>
            <input type="text" class="form-control" id="author" value="{{name}}" disabled/>
          {{/user}}
          {{^user}}
            <input type="text" class="form-control" id="author" placeholder="작성자를 입력하세요"/>
          {{/user}}
        </div>
      </div>

      <!-- This container will become the editable. -->
      <div id="editor">
      </div>

    </form>
  <div class="button-box" align="right">
    <a href="/" role="button" class="btn btn-danger">취소</a>
    <button type="button" class="btn btn-success" id="btn-save">등록</button>
  </div>
</div>

<script src="/js/app/posts.js"></script>
<script src="/editor/build/ckeditor.js"></script>
<script src="/js/editor/ckeditor.config.js"></script>
<script src="https://ckeditor.com/apps/ckfinder/3.5.0/ckfinder.js"></script>
{{>layout/footer}}