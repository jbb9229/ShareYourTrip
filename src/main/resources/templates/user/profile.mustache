{{>layout/header}}
{{>layout/carousel}}

<div class="col-md-12">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <form>
      <div class="form-group">
        <label for="name">닉네임</label>
        <input type="text" class="form-control"
               id="userName" value="{{user.name}}">
      </div>
      <div class="form-group">
        <label for="profile_image">프로필 사진</label>
        <input type="image"/>
        <img src="{{user.picture}}" width="100%" />
      </div>
    </form>
    <a href="/" role="button" class="btn btn-warning">홈으로</a>
    <button type="button" class="btn btn-success" id="btn-update">수정 완료</button>
  </div>
</div>

{{>layout/footer}}